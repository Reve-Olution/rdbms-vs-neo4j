--Cr√©ation des tables    
CREATE TABLE PERSONNES (
    ID INTEGER(10) AUTO_INCREMENT,
    NOM VARCHAR(100),
    PRIMARY KEY(ID)
);

CREATE TABLE AMIS (
    ID INTEGER(10) AUTO_INCREMENT,
    ID_PERSONNES1 INTEGER(10) NOT NULL,
    ID_PERSONNES2 INTEGER(10) NOT NULL,
    PRIMARY KEY(ID)
);

ALTER TABLE AMIS ADD CONSTRAINT FK_ID_PERSONNES1 FOREIGN KEY (ID_PERSONNES1) REFERENCES PERSONNES(ID);
ALTER TABLE AMIS ADD CONSTRAINT FK_ID_PERSONNES2 FOREIGN KEY (ID_PERSONNES2) REFERENCES PERSONNES(ID);